<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.androidhive.materialtabs.fragments.TwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button

            android:id="@+id/btnsegitiga"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:layout_gravity="center"
            android:background="@color/segitiga"
            android:drawableLeft="@drawable/segitiga_24dp"
            android:text="segitiga"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnlingkaran"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/lingkaran_24dp"
            android:text="lingkaran"
            android:textColor="#fff" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnpersegipanjang"
            android:layout_width="match_parent"
            android:layout_height="214dp"
            android:layout_weight="1"
            android:background="@color/segitiga"
            android:drawableLeft="@drawable/ppanjang_24dp"
            android:text="persegi panjang"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnkotak"
            android:layout_width="match_parent"
            android:layout_height="199dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableLeft="@drawable/kotak_24dp"
            android:text="kotak"
            android:textColor="#fff" />

</LinearLayout>

    </LinearLayout>

